<%= form_for [group] do |f| %>
  <% if group.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(wiki.errors.count, "error") %>.</h4>
      <ul>
        <% group.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :group_name %>
    <%= f.text_field :group_name, class: 'form-control', placeholder: "Name of group (no spaces)" %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter the description of the webgroup" %>
  </p>

  <div class="form-group">
    <%= f.submit "Save", :class => 'btn btn-success' %>
  </div>
<% end %>
